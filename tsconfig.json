{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "target": "es5",
    "lib": ["es6", "dom"],
    "types": ["node"],
    "module": "commonjs",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "typeRoots": ["typings", "./node_modules/@types"],
    "baseUrl": "./src",
    // "paths": {
    //   "@components/*": ["components/*"],
    //   "@utils/*": ["utils/*"],
    //   "@assets/*": ["assets"],
    //   "@models/*": ["models/*"],
    //   "@routes/*": ["routes/*"],
    //   "@pages/*": ["pages/*"],
    //   "@tools/*": ["tools/*"],
    //   "@recoil/*": ["recoil/*"],
    //   "@hooks/*": ["hooks/*"],
    //   "@services/*": ["services/*"],
    //   "@api/*": ["api/*"]
    // }
  },
  "include": ["src"],
  "exclude": ["node_modules", "webpack-config"]
}
